# This is Git's per-user configuration file.
[user]
	name = Yue Peng
	email = yuepaang@gmail.com
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  side-by-side = true
  plus-style = syntax "#012800"
  minus-style = normal "#340001"
  line-numbers-left-format = ""
  line-numbers-right-format = "â”‚ "
  syntax-theme = Monokai Extended

[credential]
	helper = store

[github]
  user = yuepaang

[alias]
  unstage = reset HEAD --
  a = add
  b = branch
  c = commit
  d = diff
  f = fetch
  g = grep
  l = log
  m = merge
  o = checkout
  p = pull
  r = remote
  s = status
  st = status
  w = whatchanged

  ca = commit --append
  co = checkout
  dc = diff --cache
  ds = diff --staged
  # log key - our favorite way to show our key performance indicators, i.e. our most useful summary.
  lk = log --graph --topo-order --abbrev-commit --date=short --decorate --all --boundary --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset %Cblue%G?%Creset'

  # Stash aliases
  save = stash save
  pop = stash pop

  discard = reset --hard HEAD
  ch = checkout
  sign = commit -S -m
  signtag = 'tag -s -m ""'

  graph = log --graph
  last = log -n 10
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
  rmtag = "!sh -c 'git tag -d $1; git push origin :refs/tags/$1'"

  release   = !sh "$HOME/dotfiles/git-extras/git-release.sh"
  sign-release   = !sh "$HOME/dotfiles/git-extras/git-sign-release.sh"
  setup     = !zsh "$HOME/dotfiles/git-extras/git-setup.sh"
  summary   = !zsh "$HOME/dotfiles/git-extras/git-summary.sh"
  pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1; } ; f"
  cleanup = !ruby "$HOME/dotfiles/git-extras/git-cleanup.rb"

[push]
  default = simple

[color]
  ui = true

[format]
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset %C(bold yellow)%GK%Creset
  graph = true

[advice]
  statusHints = false

[log]
  abbrevCommit = true

[merge]
  conflictstyle = diff3

[mergetool]
  keepBackup = false

[pull]
  rebase = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[color "diff"]
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

